{
  "name": "mohibeyki-website",
  "version": "0.1.0",
  "description": "A personal resume website using milligram",
  "homepage": "https://biook.ir",
  "repository": "mohibeyki/mohi",
  "license": "MIT",
  "author": "Mohi Beyki <mohibeyki@gmail.com>",
  "private": true,
  "keywords": [
    "bootstrap",
    "css",
    "css3",
    "flexbox",
    "front-end",
    "framework",
    "html",
    "html5",
    "kickstarter",
    "less",
    "responsive",
    "mobile",
    "mobile-first",
    "postcss",
    "responsive",
    "sass",
    "scss",
    "stylus"
  ],
  "ignore": [
    ".appveyor.yml",
    ".editorconfig",
    ".eslintrc",
    ".github",
    ".gitignore",
    ".npmignore",
    ".sasslintrc",
    ".travis.yml",
    "backstop.conf.js",
    "bower.json",
    "changelog.md",
    "composer.json",
    "package.js",
    "package.json",
    "src",
    "test"
  ],
  "dependencies": {
    "normalize.css": "^8.0.1"
  },
  "devDependencies": {
    "autoprefixer": "^9.6.1",
    "ava": "^2.3.0",
    "backstopjs": "^4.3.2",
    "banner-cli": "^0.14.0",
    "browser-sync": "^2.26.7",
    "editorconfig-tools": "^0.1.1",
    "eslint": "^6.3.0",
    "eslint-config-styled": "^0.0.2",
    "node-sass": "^4.12.0",
    "npm-run-all": "^4.1.5",
    "nyc": "^14.1.1",
    "onchange": "^6.0.0",
    "postcss-cli": "^6.1.3",
    "rimraf": "^3.0.0",
    "sass-lint": "^1.13.1"
  },
  "engines": {
    "node": ">=4"
  },
  "scripts": {
    "start": "run-p build watch serve",
    "build": "run-s sass",
    "clean": "rimraf dist",
    "sass": "node-sass src/milligram.scss dist/milligram.css && node-sass src/milligram.scss dist/milligram.min.css --output-style compressed",
    "autoprefixer": "postcss -u autoprefixer --no-map.inline --autoprefixer.browsers \"last 1 versions\" -r dist/*.css",
    "banner": "banner-cli dist/*.css",
    "watch": "onchange src -- run-p build",
    "serve": "browser-sync start --no-notify -s site --ss dist -f dist site",
    "backstop": "run-s build && run-p serve compare",
    "reference": "backstop reference --configPath=backstop.conf.js",
    "compare": "backstop test --configPath=backstop.conf.js",
    "lint": "sass-lint -c .sasslintrc src --verbose --no-exit && eslint test -c styled && editorconfig-tools check .",
    "ava": "nyc ava",
    "test": "run-s build lint ava"
  }
}
